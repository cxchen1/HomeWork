                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30px"
                        android:background="#FFEBCD"
                        tools:ignore="PxUsage" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
